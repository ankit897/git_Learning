class Solution {
    public double myPow(double x, int n) {
    if(n==0){
        return 1.00000;
    }
    if(n==Integer.MIN_VALUE){
        n = n+1;
        return (1/x)*myPow(x,n);
    }
    if(n<0){
        n = -n;
        x = 1/x;
    }
     double temp = myPow(x,n/2);
        temp = temp*temp;
        if(n %2 ==0){
            return temp;
        }
        else{
         return temp * x;
        }
        
    }
}
